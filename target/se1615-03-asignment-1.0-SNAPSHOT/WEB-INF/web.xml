<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AccessController</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.AccessController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailController</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.DetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FoodController</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.FoodController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PayController</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.PayController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminCustomerController</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.AdminCustomerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminOrderController</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.AdminOrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminFoodController</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.AdminFoodController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDiscountFoodController</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.AdminDiscountFoodController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admin</servlet-name>
        <servlet-class>com.fptuni.prj301.assignment.controller.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccessController</servlet-name>
        <url-pattern>/Access/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FoodController</servlet-name>
        <url-pattern>/Food/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/Home/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PayController</servlet-name>
        <url-pattern>/Pay/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/Admin/*</url-pattern>
    </servlet-mapping>
    <request-character-encoding>UTF-8</request-character-encoding>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
